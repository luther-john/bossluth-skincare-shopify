<section class="gym-hero-section">
  <div class="hero-container">
    
    <div class="hero-content">
      <div class="rating-stars">
        <span>★★★★★</span>
      </div>
      <h1 class="hero-title">{{ section.settings.title }}</h1>
      <p class="hero-subtitle">{{ section.settings.subtitle }}</p>
      
      <a href="{{ section.settings.button_link }}" class="hero-btn">
        {{ section.settings.button_label }}
      </a>

      <div class="hero-testimonial">
        <p>"{{ section.settings.testimonial_text }}"</p>
        <div class="testimonial-author">
          <span class="author-initials">{{ section.settings.author_initials }}</span>
          <span class="author-name">{{ section.settings.author_name }}</span>
        </div>
      </div>
    </div>

    {% comment %} <div class="hero-image-wrapper">
      {% if section.settings.hero_image != blank %}
        <img src="{{ section.settings.hero_image | img_url: 'master' }}" alt="">
      {% else %}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
    </div> {% endcomment %}

  </div>
</section>

{% schema %}
{
  "name": "Gym Hero Custom",
  "settings": [
    { "type": "text", "id": "title", "label": "Heading", "default": "GEAR FOR THE 5AM CLUB" },
    { "type": "text", "id": "subtitle", "label": "Subheading", "default": "SQUAT-PROOF. SWEAT-WICKING. UNSTOPPABLE." },
    { "type": "text", "id": "button_label", "label": "Button Label", "default": "SHOP THE DROP" },
    { "type": "url", "id": "button_link", "label": "Button Link" },
    { "type": "image_picker", "id": "hero_image", "label": "Main Image" },
    { "type": "textarea", "id": "testimonial_text", "label": "Testimonial", "default": "The best fit I've ever worn. Period." },
    { "type": "text", "id": "author_name", "label": "Author Name", "default": "MIKE R." },
    { "type": "text", "id": "author_initials", "label": "Initials", "default": "M.R" }
  ],
  "presets": [{ "name": "Gym Hero Custom" }]
}
{% endschema %}

<style>
    .gym-hero-section {
  background-color: #2b3a5a; /* Deep Navy from your image */
  color: #ffffff;
  padding: 80px 5%;
  overflow: hidden;
  display: flex;
  align-items: center;
}

.hero-container {
  max-width: 1200px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 40px;
  align-items: center;
}

.hero-title {
  font-size: clamp(2rem, 5vw, 4rem);
  font-weight: 800;
  line-height: 1.1;
  text-transform: uppercase;
  margin-bottom: 20px;
}

.hero-subtitle {
  font-size: 1.1rem;
  letter-spacing: 2px;
  margin-bottom: 30px;
}

.hero-btn {
  background-color: #ffc107; /* The Yellow from your image */
  color: #000;
  padding: 18px 45px;
  text-decoration: none;
  font-weight: bold;
  border-radius: 50px;
  display: inline-block;
  transition: transform 0.2s;
}

.hero-btn:hover { transform: scale(1.05); }

.hero-testimonial { margin-top: 50px; font-size: 0.9rem; }

.author-initials {
  background: #fff;
  color: #2b3a5a;
  padding: 8px;
  border-radius: 50%;
  font-weight: bold;
  margin-right: 10px;
}

.hero-image-wrapper img {
  width: 100%;
  filter: drop-shadow(0 20px 30px rgba(0,0,0,0.5));
  animation: float 4s ease-in-out infinite;
}

@keyframes float {
  0% { transform: translateY(0px); }
  50% { transform: translateY(-20px); }
  100% { transform: translateY(0px); }
}

/* Mobile Responsiveness */
@media (max-width: 768px) {
  .hero-container { grid-template-columns: 1fr; text-align: center; }
  .hero-image-wrapper { order: -1; } /* Image on top for mobile */
}
</style>